<%= form_with model: model, local: true do |f| %>  
    <%= f.label :name, "Item Name:" %><br>
    <%=  f.text_field :name %><br>
    <%= f.label :description, "Description of Item:" %><br>
    <%=  f.text_field :description %><br>
    <%= f.label :unit_price, "Price per unit in USD:" %><br>
    <%=  f.text_field :unit_price %><br>
    <%= f.submit %>
<% end %>